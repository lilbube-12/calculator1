<body>
    <div class="calculatorcontainer">
        <input type="text" class="display" id="username" readonly>
        <div class="buttons">
            <button class="clear" onclick="">C</button>
            <button class="clear-entry" onclick="">CE</button>
            <button class="operator" onclick="">⌫</button>
            <button class="operator" onclick="">/</button>
            
            <button class="number" onclick="">7</button>
            <button class="number" onclick="">8</button>
            <button class="number" onclick="">9</button>
            <button class="operator" onclick="">*</button>
            
            <button class="number" onclick="">4</button>
            <button class="number" onclick="">5</button>
            <button class="number" onclick="">6</button>
            <button class="operator" onclick="">-</button>
            
            <button class="number" onclick="">1</button>
            <button class="number" onclick="">2</button>
            <button class="number" onclick="">3</button>
            <button class="operator" onclick="">+</button>
            
            <button class="number zero" onclick="">0</button>
            <button class="decimal" onclick="">.</button>
            <button class="equals" onclick="">=</button>
        </div>
    </div>

    <script>
        let ebube = document.querySelectorAll(".calculatorcontainer button");
        console.log(ebube);
        let black = document.getElementById("username");

        ebube.forEach((btn) => {
            btn.addEventListener("click", () => {
                let buttonContent = btn.textContent;
                if (buttonContent === "C") {
                    clearData()
                } else if (buttonContent === "=") {
                    Evaluate()
                } else if (buttonContent === "+/-") {
                    // TODO: Add toggle positive/negative functionality
                } else if (buttonContent === "CE") {
                    clearData()
                } else if (buttonContent === "⌫") {
                    clearOne()
                } else {
                    appendValue(buttonContent)
                }
            })
        });

        const clearData = () => {
            black.value = ""
        };

        const appendValue = (buttonContent) => {
            black.value += buttonContent;
        };

        // run calculation
        const Evaluate = () => {
            let inputValue = black.value;
            inputValue = inputValue.replace(/%/g, "/100");
            try {
                black.value = eval(inputValue);
            } catch (e) {
                black.value = "Undefined";
                black.style.color = "red";
                setTimeout(() => {
                    black.value = "";
                    black.style.color = "white";
                }, 5000)
            }
        };

        const clearOne = () => {
            let inputData = black.value;
            black.value = inputData.slice(0, -1);
        }

        // Keyboard support
        document.addEventListener('keydown', function(event) {
            const key = event.key;
            
            if (key >= '0' && key <= '9' || key === '.' || ['+', '-', '*', '/'].includes(key)) {
                appendValue(key);
            } else if (key === 'Enter' || key === '=') {
                Evaluate();
            } else if (key === 'Escape') {
                clearData();
            } else if (key === 'Backspace') {
                clearOne();
            }
        });

        // Initialize display
        black.value = '';
    </script>
</body>
